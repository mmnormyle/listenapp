doctype html
html
  head
    title= 'Moosic'
    link(rel='stylesheet', href='/stylesheets/musicroom.css')
    link(href='https://fonts.googleapis.com/css?family=Josefin+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    script(src="https://cdn.socket.io/socket.io-1.0.0.js?onload=socketioLoad")
    <!-- drawer.css -->
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.0/css/drawer.min.css")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.1.3/iscroll.min.js")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.0/js/drawer.min.js")

    script(src="/javascripts/musicroom.js")
    link(href='https://fonts.googleapis.com/css?family=Cousine' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Source+Code+Pro:300' rel='stylesheet' type='text/css')
    script(src="https://apis.google.com/js/client.js?onload=youtubeAPIInit")
    script(src="https://www.youtube.com/iframe_api")
    
  body(class="drawer drawer--left")
    div#div_header.div_root(role="banner")
        button(type="button" class="drawer-toggle drawer-hamburger")
            span(class="sr-only")
                | toggle navigation
            span(class="drawer-hamburger-icon")
        nav(class="drawer-nav" role="navigation")
            ul(class="drawer-menu")
                li
                    a(class="drawer-brand" href="#")
                        | Brand
                li
                    a(class="drawer-menu-item" href="#")
                        | Nav1
                li
                    a(class="drawer-menu-item" href="#")
                        | Nav2
        input#input_search(placeholder="type in an artist and song name")
        br
        #div_search_results
        //user lists
    div#div_body.div_root
        //player
        #div_current_content
            #div_player
            #div_current_content_info.shadow
                div#div_info_holder
                    #p_current_content_info.current_content_info
                    br
                    #p_current_recommender_info.current_content_info
        //info
        #div_info.shadow
    div#div_footer.div_root
