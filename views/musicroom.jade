doctype html
html
  head
    title= 'Moosic'
    link(rel='stylesheet', href='/stylesheets/musicroom.css')
    link(href='https://fonts.googleapis.com/css?family=Josefin+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    script(src="https://cdn.socket.io/socket.io-1.0.0.js?onload=socketioLoad")
    script(src="/javascripts/musicroom.js")
    link(href='https://fonts.googleapis.com/css?family=Cousine' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Source+Code+Pro:300' rel='stylesheet' type='text/css')
    script(src="https://apis.google.com/js/client.js?onload=youtubeAPIInit")
    script(src="https://www.youtube.com/iframe_api")
    
  body
    div#div_player
        div#youtubeplayer
    div#div_search
        div(style="display: inline-block; width: 100%; height: 90%;")
            #div_users_list
        div(style="display: inline-block; width: 100%; height: 10%;")
            input#chat_input.chat_input(placeholder="leave a comment and press enter" style="display: none")
            input#txt_name_change.chat_input(placeholder="enter your name and press enter")
    div#div_info
        br
        div(style="display: inline-block; width: 100%; height: 25%;")
            img(src="../images/arrows-1.png")
            div(style="display: inline-block; width: 20px")
            img(src="../images/arrows.png")
        div(style="display: inline-block; width: 100%; height: 25%;")
            #div_recommender
                p#p_recommender
                br
                p#p_video_title
                br
        div(style="display: inline-block; width: 100%; height: 50%;")
            input(id="txt_search_videos", type="text", placeholder="type an artist and song name and hit enter")
            ul#list_search_results
    div#div_queue
        ul#list_queue
